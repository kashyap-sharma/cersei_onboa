<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/pill"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_locality"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:theme="@style/TextLabel"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_locality"
                android:textColor="#fff"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locality 1" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_charg"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:theme="@style/TextLabel"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_charge"
                android:textColor="#fff"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delivery Charge" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_sublocality"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:theme="@style/TextLabel"

        android:layout_below="@+id/pill"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_sublocality"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sublocality 1" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_arealocality"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:theme="@style/TextLabel"
        android:layout_below="@+id/input_layout_sublocality"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_arealocality"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Areas 1" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>