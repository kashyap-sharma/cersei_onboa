<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/parent"
    android:background="#80000000"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retailer"
        android:textColor="#fff"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Retailer:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:paddingTop="5dp"
        android:textColor="#fff"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:text="Contact:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reatilerID"
        android:textColor="#fff"
        android:layout_below="@+id/retailer"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="RetailerID:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addedby"
        android:layout_below="@+id/retailer"
        android:paddingTop="5dp"
        android:textColor="#fff"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:text="Added by:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_order"
        android:layout_below="@+id/addedby"
        android:paddingTop="5dp"
        android:textColor="#fff"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:text="Min Order:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat_long"
        android:textColor="#fff"
        android:layout_below="@+id/reatilerID"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:text="Lat Longs:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"

        android:layout_below="@+id/lat_long"
        android:textColor="#fff"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Email:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textColor="#fff"
        android:layout_below="@+id/email"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Address:"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hi"
        android:textColor="#fff"
        android:layout_below="@+id/address"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Areas:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/areas"
         android:visibility="gone"
        android:textColor="#fff"


       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:layout_below="@+id/address"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/hi"
        android:layout_height="wrap_content">


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Edit"
        android:visibility="gone"
        android:id="@+id/edit"
        android:textSize="25sp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:background="#90000000"/>

</RelativeLayout>